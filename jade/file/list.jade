extend ../common/new-page

block title
	title 分享平台
block main
	for item, index in list
		article.post
			.post-head
				h1.post-title
					a(href="#{item.ext == 'md' ? '/readme/' : '/readme/'}#{item.fsPath}",target="#{item.tag == '下载' ? '' : '_blank'}") 
						| #{item.name}
						if item.isNew
							span.label.label-danger(style="font-size: 10px;margin-left: 5px;") 新
				.post-meta
					span.author
						| 格式：#{item.ext}
					span.author
						| 大小：#{item.size}
					| • &nbsp;
					time.post-date #{item.ftime}
			.post-content
				p
					| 文件路径：#{item.fsPath}
					| &nbsp;&nbsp;
					| 修改时间：#{item.mtime}
			.post-permalink
				a.btn.btn-default(href="#{item.ext == 'md' ? '/readme/' : '/readme/'}#{item.fsPath}",target="#{item.tag == '下载' ? '' : '_blank'}")
					if item.tag == "下载"
						| 点击下载
					else
						| 阅读全文
	nav.pagination(role='navigation')
		if pageIndex > 1
			a.newer-posts(href='/file/list?index=#{1 * pageIndex - 1}')
				i.fa.fa-angle-left
		span.page-number 第 #{pageIndex} 页 ⁄ 共 #{pageTotal} 页
		if pageIndex < pageTotal
			a.older-posts(href='/file/list?index=#{1 * pageIndex + 1}')
				i.fa.fa-angle-right
block footer
	.col-sm-4
		.widget
			h4.title 最新文章
			.content.recent-post
				for item, index in topList
					.recent-single-post
						a.post-title(href="#{item.ext == 'md' ? '/readme/' : '/readme/'}#{item.fsPath}",target="#{item.tag == '下载' ? '' : '_blank'}") #{item.fsPath}
						.date #{item.mtime}
	.col-sm-4
